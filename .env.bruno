# Booli Admin API Environment Configuration
# For docker-compose development environment

# Application Environment
BOOLI_ENVIRONMENT=development
BOOLI_SERVER_PORT=8081

# Organization Configuration (for production initialization)
BOOLI_ORGANIZATION_NAME="Booli MSP"
BOOLI_ORGANIZATION_DOMAIN=booli.local

# Database Configuration  
BOOLI_DATABASE_HOST=localhost
BOOLI_DATABASE_PORT=5432
BOOLI_DATABASE_USER=postgres
BOOLI_DATABASE_PASSWORD=postgres
BOOLI_DATABASE_DBNAME=booli_admin
BOOLI_DATABASE_SSLMODE=disable

# Redis/Valkey Configuration
BOOLI_REDIS_HOST=localhost
BOOLI_REDIS_PORT=6379
BOOLI_REDIS_PASSWORD=

# Keycloak Configuration
BOOLI_KEYCLOAK_URL=http://localhost:8083
BOOLI_KEYCLOAK_ADMIN_USER=admin
BOOLI_KEYCLOAK_ADMIN_PASSWORD=admin
BOOLI_KEYCLOAK_MASTER_REALM=master
BOOLI_KEYCLOAK_CLIENT_ID=admin-cli
BOOLI_KEYCLOAK_CLIENT_SECRET=
BOOLI_KEYCLOAK_CALLBACK_URL=http://localhost:8081/auth/callback
BOOLI_KEYCLOAK_MSP_REALM=msp-platform

# Organizations Architecture Configuration
KEYCLOAK_MSP_REALM=msp-platform
KEYCLOAK_MSP_REALM_ENABLED=true
KEYCLOAK_MSP_REALM_DISPLAY_NAME=MSP Platform
KEYCLOAK_MSP_CLIENT_ID=msp-platform-client
KEYCLOAK_MSP_CLIENT_SECRET=msp-platform-secret
KEYCLOAK_MSP_CLIENT_REDIRECT_URIS=http://localhost:8081/auth/callback
KEYCLOAK_MSP_CLIENT_WEB_ORIGINS=http://localhost:8081
KEYCLOAK_MSP_CLIENT_STANDARD_FLOW=true
KEYCLOAK_MSP_CLIENT_SERVICE_ACCOUNTS=true
KEYCLOAK_MSP_CLIENT_DIRECT_ACCESS=true
KEYCLOAK_MSP_CLIENT_IMPLICIT_FLOW=false
KEYCLOAK_MSP_CLIENT_PUBLIC=false

# Default test user for development
KEYCLOAK_MSP_DEFAULT_USER_USERNAME=admin
KEYCLOAK_MSP_DEFAULT_USER_PASSWORD=admin
KEYCLOAK_MSP_DEFAULT_USER_EMAIL=admin@example.com
KEYCLOAK_MSP_DEFAULT_USER_FIRST_NAME=Admin
KEYCLOAK_MSP_DEFAULT_USER_LAST_NAME=User
KEYCLOAK_MSP_DEFAULT_USER_ROLES=msp-admin

# Security Configuration
BOOLI_JWT_SECRET_KEY=dev-secret-key-change-in-production
BOOLI_SECURITY_ENCRYPTION_KEY=dev-encryption-key-change-in-production
BOOLI_SECURITY_RATE_LIMIT=100